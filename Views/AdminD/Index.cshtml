@model IEnumerable<Department>
@{
    ViewBag.Title = "All Departments";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Description</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.DeptID</td>
            <td>@item.Name</td>
            <td class="text-right">@item.Description</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-primary" style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF" );
                       asp-route-productId="@item.DeptID">
                        Edit
                    </a>
                    <input type="hidden" name="ProductID" value="@item.DeptID " style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF");" />
                    <button type="submit" class="btn btn-primary btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary" style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF");>Add Department</a>
</div>
