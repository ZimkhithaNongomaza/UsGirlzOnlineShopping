@model IEnumerable<Product>
@{
    ViewBag.Title = "All Products";
    Layout = "_SalesAdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Description</th>
        <th class="text-center">price</th>
        <th class="text-center">Category</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td class="text-right">@item.ProductID</td>
    <td>@item.Name</td>
    <td class="text-right">@item.Description</td>
    <td class="text-right">@item.Price</td>
    <td class="text-right">@item.Category</td>
    <td class="text-center">
        <form asp-action="Delete" method="post">
            <a asp-action="Edit" class="btn btn-sm btn-primary" style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF"
               asp-route-productId="@item.ProductID">
                Edit
            </a>
            <input type="hidden" name="ProductID" value="@item.ProductID" />
            <button type="submit" class="btn btn-primary btn-sm" style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary"  style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF">Add Product</a>
</div>
