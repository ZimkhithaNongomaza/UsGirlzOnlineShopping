@model IEnumerable<Employee>
@{
    ViewBag.Title = "All Employees";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Surname</th>
        <th class="text-center">Gender</th>
        <th class="text-center">Grade Level</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td class="text-right">@item.EmployeeID</td>
    <td>@item.Name</td>
    <td class="text-right">@item.Surname</td>
    <td class="text-right">@item.Gender</td>
    <td class="text-right">@item.GradeLevel</td>
    <td class="text-center">
        <form asp-action="Delete" method="post">
            <a asp-action="Edit" class="btn btn-primary btn-sm "style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF"
               asp-route-productId="@item.EmployeeID">
                Edit
            </a>
            <input type="hidden" name="ProductID" value="@item.EmployeeID" />
            <button type="submit" class="btn btn-primary  btn-sm" style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF);">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary"  style=" background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF); ">Add Employee</a>
</div>
