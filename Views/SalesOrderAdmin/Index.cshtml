@model IEnumerable<Order>
@{
    ViewBag.Title = "All orders";
    Layout = "_SalesAdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Street Number and Name</th>
        <th class="text-center">Surburb</th>

        <th class="text-center">Province</th>-
        <th class="text-center">City</th>
        <th class="text-center">Zip</th>
        <th class="text-center">GiftWrap</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td class="text-right">@item.OrderID</td>
    <td>@item.Name</td>
    <td class="text-right">@item.Line1</td>
    <td class="text-right">@item.Line2</td>
    <td class="text-right">@item.Line3</td>
    <td class="text-right">@item.City</td>
    <td class="text-right">@item.Zip</td>
    <td class="text-right">@item.GiftWrap</td>
    <td class="text-center">
        <form asp-action="MarkShipped" method="post">
            <input type="hidden" name="orderId" value="@item.OrderID" />
            <button type="submit" class="btn btn-sm btn-primary" style="background-image: linear-gradient(135deg,#9708CC,#43CBFF,#9708CC,#43CBFF">
                Ship
            </button>
        </form>
    </td>
</tr>
    }
</table>
